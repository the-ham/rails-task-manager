  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <% if !@task.new_record? %>
      <%= f.label :completed %>
      <%= f.number_field :completed %>
    <% end %>
    <%= f.submit %>
<% end %>
